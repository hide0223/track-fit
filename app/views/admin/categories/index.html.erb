<h3>カテゴリ一覧・追加</h3>

<%=form_with model: @category,url: admin_categories_path, method: :post do |f| %>

  <td><%= f.label :"カテゴリ", class: "mr-3" %></td>
  <td><%= f.text_field :category_name, class: "mr-5" %></td>
  <td><%= f.submit'新規登録',class: "btn btn-primary" %></td>

<% end %>

<th>カテゴリ</th>
 <% @categories.each do |category| %>
   <td><%= category.category_name %></td>
 <%end%>