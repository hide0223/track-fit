<div class="list_buttons">
  <div class="list_button">
    <%= link_to '食事', admin_meal_comments_path(@customers), class: "name-link" %>
  </div>
  <div class="list_button">
    <%= link_to 'トレーニング',admin_training_comments_path(@customers), class: "name-link" %>
  </div>
</div>
<table class="table">
  <tr>
    <th class="col-2">名前</th>
    <th class="col-8">コメント</th>
    <th class="col-1"></th>
    <th class="col-1"></th>
  </tr>
<% @meal_comments.each do |meal_comment| %>
  <tr>
    <td class="col-2"><%= @customers.find(meal_comment.customer_id).name %></td>
    <td class="col-8"><%= meal_comment.comment %></td>
    <td class="col-1"><%= meal_comment.created_at.strftime('%Y/%m/%d') %></td>
    <td class="col-1">
    <%= link_to '削除', admin_meal_comment_path(meal_comment), method: :delete, data: { confirm: '本当に削除しますか?' },class: "btn btn-sm btn-outline-danger" %>
    </td>
  </tr>
<% end %>
</table>