<% if @meal == [] %>
  <div class="border-bottom">
    <h2 style="text-align:center">検索結果がありません。</h2>
  </div>
<% elsif @meal.present? %>
  <% search_word = @meal_q.meal_contents_eat_meal_cont %>
  <div class="border-bottom">
    <h2 style="text-align:center">検索結果 "<%= search_word %>"</h2>
  </div>
    <div style="display: flex; justify-content: space-between; padding: 0px 10px 10px 10px ;" class="mt-3 border-bottom">
      <div style="display: flex;">
      <% @meal.each do |meal| %>
        <% meal.meal_contents.each do |meal_content| %>
          <%= meal_content.id %>
          <%= meal_content.eat_meal %>
         <% end %>
      <% end %>
      </div>
    </div>
<% else %>
  <div class="border-bottom">
    <h2 style="text-align:center">検索結果がありません。</h2>
  </div>
<% end %>



