<div class="nested-fields">
  <div class="d-flex">
    <div class="mt-2 mr-2">
      <%= f.select :meal_summary, [["主食", "主食"], ["主菜", "主菜"], ["副菜", "副菜"]], include_blank: "主食など選択", class: "form-control" %>
    </div>
    <div class="mt-2 mx-2">
      <%= f.text_field :eat_meal, required: true, placeholder: "例：鶏肉と野菜の炒め物", class: "form-control" %>
    </div>
    <div class="mt-2 mx-2">
      <%= f.number_field :kcal, required: true, class: "form-control" %>
    </div>
    <div class="mt-3 mr-4"><%= f.label :kcal %></div>
    <div class="mt-2">
      <%= link_to_remove_association "削除", f, class: "btn btn-outline-danger" %>
    </div>
  </div>
</div>
