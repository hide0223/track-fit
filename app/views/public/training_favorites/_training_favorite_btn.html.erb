<% if training.favorited_by?(current_customer) %>
  <%= link_to public_training_training_favorites_path(training), method: :delete,  style: "color: red;" do %>
    <i class="fas fa-heart" aria-hidden="true"></i>
  <% end %>
  <span style="font-size: smaller; opacity: 0.8;"><%= training.training_favorites.count %></span>
<% else %>
  <%= link_to public_training_training_favorites_path(training), method: :post do %>
    <i class="favorite fas fa-heart"></i>
  <% end %>
  <span style="font-size: smaller; opacity: 0.8;"><%= training.training_favorites.count %></span>
<% end %>
