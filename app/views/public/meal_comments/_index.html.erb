<table>
  <tbody>
      <% meal.meal_comments.each do |meal_comment| %>
      <tr>

        <td>
          <%= link_to public_customer_path(meal_comment.customer) do %>
            <%= image_tag meal_comment.customer.get_profile_image, size: "100x100" %><br>
            <%= meal_comment.customer.name %>
          <% end %>
        </td>
        <td><%= meal_comment.comment %></td>
        <td>
          <% if meal_comment.customer == current_customer %>
            <%= link_to "Destroy", public_meal_meal_comment_path(meal, meal_comment), method: :delete, remote: true, class: "btn btn-danger pull-right" %>
          <% end %>
        </td>
      </tr>
      <% end %>
  </tbody>
</table>