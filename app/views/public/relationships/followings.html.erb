<div class="border-bottom mt-3 pb-3">
  <h3 style="text-align:center">フォロー中</h2>
</div>
<% if @customers.exists? %>
　<% @customers.each do |customer| %>
    　<div style="display: flex; justify-content: space-between; padding: 0px 10px 10px 10px ;" class=" border-bottom">
        <div style="display: flex;">
          <%= image_tag customer.get_profile_image, size: '40x40', class: "rounded-circle border" %>
          <div>
          　<%= link_to customer.name, public_customer_path(customer), class: "name-link" %><br>
          　<span class="name-link"><%= customer.introduction %></span>
          </div>
      　</div>
        <div id="follow_btn_<%= customer.id %>">
          <%= render "public/relationships/btn", customer: customer, options: { class: "follow-link" } %>
        </div>
      </div>
  <% end %>
<% else %>
  <p>ユーザーはいません</p>
<% end %>