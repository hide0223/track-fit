<%= render 'layouts/errors', obj: @training_comment %>
<div class="px-4 pt-2 border-bottom">
  <div class="pl40"><p>返信先<%= link_to @training.customer.name, public_customer_path(@training.customer), class: "name-link"%>さん</p></div>
  <div class="d-flex">
    <div class="">
      <%= image_tag current_customer.get_profile_image, size:'40x40', class: "rounded-circle border" %>
    </div>
    <div class="username">
      <%= link_to current_customer.name, public_customer_path(current_customer), class: "name-link"%>
    </div>
  </div>
  <%= form_with(model: [training, training_comment], url: public_training_training_comments_path(training), method: :post, local: false, html: { class: "pl40 pt-2" }) do |f| %>
  <div class="row">
    <div class="col-sm-6">
      <%= f.text_area :comment, rows:'4', placeholder: "コメントをここに", required: true, class: "form-control"%>
    </div>
  </div>
  <div class="d-flex justify-content-end">
    <button type="submit" class="btn btn-outline-dark mt-3">
      <p class="a-button">送信</p>
    </button>
  </div>
　<% end %>
</div>