<table>
  <tbody>
      <% training.training_comments.each do |training_comment| %>
      <tr>

        <td>
          <%= link_to public_customer_path(training_comment.customer) do %>
            <%= image_tag training_comment.customer.get_profile_image, size: "100x100" %><br>
            <%= training_comment.customer.name %>
          <% end %>
        </td>
        <td><%= training_comment.comment %></td>
        <td>
          <% if training_comment.customer == current_customer %>
            <%= link_to "Destroy", public_training_training_comment_path(training, training_comment), method: :delete, class: "btn btn-danger pull-right" %>
          <% end %>
        </td>
      </tr>
      <% end %>
  </tbody>
</table>