<% if meal.favorited_by?(current_customer) %>
  <%= link_to public_meal_meal_favorites_path(meal), method: :delete, remote: true,  style: "color: red;" do %>
    <i class="fas fa-heart" aria-hidden="true"></i>
  <% end %>
  <span class="mini-words"><%= meal.meal_favorites.count %></span>
<% else %>
  <%= link_to public_meal_meal_favorites_path(meal), method: :post, remote: true do %>
    <i class="favorite fas fa-heart" aria-hidden="true"></i>
  <% end %>
  <span class="mini-words"><%= meal.meal_favorites.count %></span>
<% end %>
