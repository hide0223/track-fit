<div class="d-flex pb-2">
  <div class="mt-2 ml-4">
    <%= image_tag customer.get_profile_image, size:'70x70', class: "rounded-circle border" %>
  </div>
  <div class="mt-3 ml-4">
    <div>
      <span class="name-link"><%= customer.name %></span>
    </div>
    <div class="d-flex mt-2">
      <div>
        <%= link_to public_customer_followings_path(customer) do %>
          <span class="name-link"><%= customer.followings.count %></span>
          <span class="relationships-name ml-1" style="opacity: 0.8;">フォロー中</span>
        <% end %>
      </div>
      <div class="ml-4">
        <%= link_to public_customer_followers_path(customer) do %>
          <span class="name-link"><%= customer.followers.count %></span>
          <span class="relationships-name ml-1" style="opacity: 0.8;">フォロワー</span>
        <% end %>
      </div>
    </div>
  </div>
</div>
<div>
  <%= render 'layouts/search' %>
</div>