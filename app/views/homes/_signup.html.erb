<%= form_with model: customer, url: customer_registration_path, local: true do |f| %>
  <div class="set_center_outer">
    <div class="signin-set_center_inner">
      <div class="signin-field mt-3">
        <%= f.label :name %><br />
        <%= f.text_field :name, :required => true,minlength: 2, title: "2文字以上で入力してください", autofocus: true, autocomplete: "name", class: "form-control" %>
      </div>


      <div class="signin-field">
        <%= f.label :email %><br />
        <%= f.email_field :email, :required => true, autofocus: true, autocomplete: "email", class: "form-control" %>
      </div>

      <div class="signin-field">
        <%= f.label :password %><br />
        <%= f.password_field :password, :required => true, minlength: 5, autocomplete: "new-password", class: "form-control" %>
      </div>

      <div class="signin-field">
        <%= f.label :password_confirmation %><br />
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control" %>
      </div>

      <div class="modal_submit mb-3">
        <%= f.submit "Sign up", class: "btn btn-outline-dark" %>
      </div>
    </div>
  </div>
<% end %>