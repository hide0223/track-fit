<%= form_with model: customer, url: customer_registration_path, local: true do |f| %>
  <div class="set_center_outer">
    <div class="signin-set_center_inner">
      <div class="signin-field mt-3">
        <%= f.label :名前 %><br />
        <%= f.text_field :name, autofocus: true, autocomplete: "name", class: "form-control" %>
      </div>


      <div class="signin-field">
        <%= f.label :メールアドレス %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
      </div>

      <div class="signin-field">
        <%= f.label :パスワード %><br />
        <%= f.password_field :password, autocomplete: "new-password", class: "form-control" %>
      </div>

      <div class="signin-field">
        <%= f.label :パスワード（確認用） %><br />
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control" %>
      </div>

      <div class="modal_submit mb-3">
        <%= f.submit "Sign up", class: "btn btn-outline-dark" %>
      </div>
    </div>
  </div>
<% end %>